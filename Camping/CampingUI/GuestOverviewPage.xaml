<Page x:Class="CampingUI.GuestOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CampingUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestOverviewPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="25" Padding="15" Background="#334A6E" CornerRadius="25"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition  Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="Overzicht gasten" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>

            <Label Content="zoeken op naam" HorizontalAlignment="Center" FontSize="10" Foreground="White" Grid.Row="2"/>
            <TextBox Grid.Row="2" Height="20" Width="150" HorizontalAlignment="Right"></TextBox>
            <Button Grid.Column="1" Grid.Row="2" Height="20" Width="80" Content="zoeken"/>

            <ItemsControl Name="GuestOverviewItemsControl" Margin="10" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Foreground="White" FontSize="20" FontWeight="Bold" Width="75" Text="{Binding GuestID}"/>
                            <TextBlock Foreground="White" FontSize="20" FontWeight="Bold" Width="125" Text="{Binding LastName}"/>
                            <TextBlock Foreground="White" FontSize="15" Text="selecteren" TextDecorations="Underline" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Grid.Column="1" Margin="25" Padding="15" Background="#334A6E" CornerRadius="25"/>
        </Grid>
    </Grid>
</Page>
