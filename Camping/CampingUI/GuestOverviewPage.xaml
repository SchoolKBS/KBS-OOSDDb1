<Page x:Class="CampingUI.GuestOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CampingUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestOverviewPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="25" Padding="15" Background="#334A6E" CornerRadius="25"/>
        <Border Grid.Column="2" Margin="25" Padding="15" Background="#334A6E" CornerRadius="25"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition  Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="Overzicht gasten" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>

            <Label Content="Voornaam" HorizontalAlignment="Center" FontSize="10" Foreground="White" Grid.Row="2"/>
            <Label Content="Achternaam" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="10" Foreground="White" Grid.Row="2"/>
           
            <TextBox x:Name="GuestFirstNameTextBox" Grid.Row="2" Height="20" Width="100" Margin="40, 0, 0, 0" HorizontalAlignment="Left"></TextBox>
            <TextBox x:Name="GuestLastNameTextBox" Grid.Row="2" Grid.ColumnSpan="2" Height="20" Width="100"  HorizontalAlignment="Center"></TextBox>
            <Button Grid.Column="1" Grid.Row="2" Height="20" Width="80" Content="zoeken" HorizontalAlignment="Center" Click="FilterOnGuestName_Click"/>

            <ItemsControl Name="GuestOverviewItemsControl" Margin="0, 0, 0, 50" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Height="30">
                            <TextBlock Foreground="White" FontSize="18" FontWeight="Bold" Width="75" Text="{Binding GuestID}"/>
                            <TextBlock Foreground="White" FontSize="18" FontWeight="Bold" Width="125" Text="{Binding LastName}"/>
                            <Button Content="selecteren" FontSize="15" FontWeight="Bold" Background="Transparent" BorderThickness="0" Foreground="White"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Page>
